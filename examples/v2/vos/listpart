#!/usr/local/bin/perl

use blib;
use strict;
use warnings;

use AFS::VOS;

my ($vos, $server);

die "Usage: $0 server \n" if $#ARGV < 0;

$server = shift;

$vos = AFS::VOS->new;
$AFS::CODE and print "AFS::CODE = $AFS::CODE\n";

my @partlist = $vos->listpart($server);
$AFS::CODE and print "AFS::CODE = $AFS::CODE\n";

print "The partitions on the server are:\n";
foreach (@partlist) {
    print "\t$_\n";
}
print "Total: ", $#partlist + 1, "\n";
